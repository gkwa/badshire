{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices", ":dependencyDashboard"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "automerge": true,
      "automergeStrategy": "merge-commit",
      "matchDepTypes": ["*"],
      "rangeStrategy": "pin",
      "recreateWhen": "always"
    }
  ],
  "platformAutomerge": true,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "postUpgradeTasks": {
    "commands": ["prettier --ignore-path=.prettierignore --config=.prettierrc.json --write .github/workflows/ci.yml"],
    "fileFilters": ["**/*.yml"],
    "executionMode": "update"
  }
}
